pipeline {
  agent {
    docker {

 image 'rahuldocker777/maven-docker:latest'

        args '--user root -v /var/run/docker.sock:/var/run/docker.sock'



    }
  }
  stages {
   
    stage('Check maven and Java Version'){
    steps{
    sh '''
    echo "I am working hard i will be selected in incedo, definitely"
    java -version
    mvn -version
    '''
  }
   }
    stage('Checkout') {
      steps {
        sh 'echo passed1'
        git branch: 'main', url: 'https://github.com/rahuldevopslearn/Jenkins-Zero-To-Hero.git'
      }
    }
    stage('Build and Test') {
      steps {
        sh 'ls -ltr'
        // build the project and create a JAR file
        sh 'cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && mvn clean package'
      }
    }
    stage('Static Code Analysis') {
      environment {
        SONAR_URL = "http://54.81.51.176:9000"
      }
      steps {
        withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]) {
          sh 'cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && mvn sonar:sonar -Dsonar.login=$SONAR_AUTH_TOKEN -Dsonar.host.url=${SONAR_URL}'
        }
      }
    }
    stage('Build and Push Docker Image') {
      environment {
        DOCKER_IMAGE = "rahuldocker777/ultimate-cicd:${BUILD_NUMBER}"
        // DOCKERFILE_LOCATION = "java-maven-sonar-argocd-helm-k8s/spring-boot-app/Dockerfile"
        REGISTRY_CREDENTIALS = credentials('docker-cred')
      }
      steps {
        script {
            sh 'cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && docker build -t ${DOCKER_IMAGE} .'
            def dockerImage = docker.image("${DOCKER_IMAGE}")
            docker.withRegistry('https://index.docker.io/v1/', "docker-cred") {
                dockerImage.push()
            }
        }
      }
    }
    stage('Update Deployment File') {
        environment {
            GIT_REPO_NAME = "k8s-deployments"           // the manifests repo
        GIT_USER_NAME = "rahuldevopslearn"
        MANIFEST_REPO_BRANCH = "main"

        }
        steps {
            //checkout scm
            withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
                          sh """
                git config --global --add safe.directory ${WORKSPACE}
                git config --global user.email "knrn23@gmail.com"
                git config --global user.name "Rahul Nigam"

                # clone the manifests repo into a temporary folder
                rm -rf ${WORKSPACE}/manifests
                git clone https://x-access-token:${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME}.git ${WORKSPACE}/manifests

                cd ${WORKSPACE}/manifests

                echo "Before update:"
                cat manifest-files/deployment.yaml

                sed -i -E "s|(image:.*:)[0-9]+|\\1${BUILD_NUMBER}|" manifest-files/deployment.yaml

                echo "After update:"
                cat manifest-files/deployment.yaml

                git add manifest-files/deployment.yaml
                git diff --cached --quiet || git commit -m "Update deployment image to version ${BUILD_NUMBER}"
                
                git push https://x-access-token:${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME}.git HEAD:${MANIFEST_REPO_BRANCH}
          """

            }
        }
    }
  }
}
